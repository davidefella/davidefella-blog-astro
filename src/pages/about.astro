<style>
  .wip-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 50vh;
    gap: var(--space-md);
  }

  .wip-icon {
    color: var(--gold);
    opacity: 0.8;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0;
  }

  .wip-text {
    font-size: 1.25rem;
    color: var(--gold);
    font-weight: 600;
    margin: 0;
  }

  .wip-sub {
    color: var(--text-muted);
    font-size: 1rem;
    margin: 0;
  }

  @media (max-width: 600px) {
    h1 {
      font-size: 2rem;
    }

    .wip-icon svg {
      width: 60px;
      height: 60px;
    }
  }
</style>
