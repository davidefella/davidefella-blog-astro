---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Prendi tutti i post non in draft, ordinati per data
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Raggruppa i post per anno
const postsByYear = allPosts.reduce((acc, post) => {
  const year = post.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof allPosts>);

// Ordina gli anni in ordine decrescente
const sortedYears = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('it-IT', {
    day: 'numeric',
    month: 'long'
  });
};
---

<Layout title="Blog" description="Articoli su sviluppo software, database, Java e didattica">
  <div class="container">
    <header class="page-header">
      <h1>Blog</h1>
      <p class="page-description">
        Appunti tecnici, tutorial e riflessioni su sviluppo software e didattica.
      </p>

      <div class="search-box">
        <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input
          type="text"
          id="search-input"
          placeholder={`Cerca tra ${allPosts.length} articoli...`}
          class="search-input"
        />
      </div>
    </header>

    <div class="posts-by-year">
      {sortedYears.map(year => (
        <section class="year-section">
          <header class="year-header">
            <h2 class="year-title">{year}</h2>
            <span class="post-count">
              {postsByYear[year].length} {postsByYear[year].length === 1 ? 'post' : 'post'}
            </span>
          </header>

          <ul class="posts-list">
            {postsByYear[year].map(post => (
              <li class="post-item" data-title={post.data.title.toLowerCase()}>
                <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
                <a href={`/blog/${post.slug}`} class="post-link">
                  {post.data.title}
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </div>
  </div>
</Layout>

<style>
  .page-header {
    margin-bottom: var(--space-3xl);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }

  .page-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0;
    max-width: 600px;
  }

  .search-box {
    position: relative;
    margin-top: var(--space-xl);
    max-width: 400px;
  }

  .search-icon {
    position: absolute;
    left: var(--space-md);
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: var(--space-sm) var(--space-md) var(--space-sm) calc(var(--space-md) + 28px);
    font-size: 0.875rem;
    font-family: var(--font-sans);
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    color: var(--text-primary);
    transition: border-color 0.2s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--blue-bright);
  }

  .search-input::placeholder {
    color: var(--text-muted);
  }

  .posts-by-year {
    max-width: 800px;
  }

  .year-section {
    margin-bottom: var(--space-3xl);
  }

  .year-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .year-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-primary);
  }

  .post-count {
    font-size: 0.95rem;
    color: var(--text-muted);
  }

  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border-subtle);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item time {
    font-size: 0.9rem;
    color: var(--text-muted);
    padding-top: 2px;
  }

  .post-link {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--blue-bright);
    transition: color 0.2s ease;
  }

  .post-link:hover {
    color: var(--gold);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .year-title {
      font-size: 1.5rem;
    }

    .post-item {
      grid-template-columns: 1fr;
      gap: var(--space-xs);
    }

    .post-item time {
      font-size: 0.85rem;
    }
  }

  /* Search states */
  .post-item.hidden {
    display: none;
  }

  .year-section.hidden {
    display: none;
  }

  .no-results {
    color: var(--text-muted);
    font-style: italic;
    padding: var(--space-xl) 0;
  }
</style>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const postItems = document.querySelectorAll('.post-item');
  const yearSections = document.querySelectorAll('.year-section');

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase().trim();

    postItems.forEach(item => {
      const title = item.getAttribute('data-title') || '';
      if (query === '' || title.includes(query)) {
        item.classList.remove('hidden');
      } else {
        item.classList.add('hidden');
      }
    });

    // Nascondi le sezioni anno senza post visibili
    yearSections.forEach(section => {
      const visiblePosts = section.querySelectorAll('.post-item:not(.hidden)');
      if (visiblePosts.length === 0) {
        section.classList.add('hidden');
      } else {
        section.classList.remove('hidden');
      }
    });
  });
</script>
