---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import davidePhoto from '../assets/images/davide-fella.jpg';

// Prendi gli ultimi 5 post
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

// Raccogli tutti i tag unici
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

const formatDate = (date: Date) => {
  return date.toLocaleDateString('it-IT', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};
---

<Layout title="Home">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <p class="hero-wave">ðŸ‘‹ Ciao, sono Davide</p>
        <h1 class="hero-title">Scrivo di software, didattica e progetti reali.</h1>
        <p class="hero-subtitle">
          Qui trovi appunti tecnici, esperimenti e riflessioni da sviluppatore e docente.
        </p>
        <a href="/blog" class="btn-primary">
          Leggi il blog <span class="arrow">â†’</span>
        </a>
      </div>
      
      <div class="hero-avatar">
        <div class="avatar-wrapper">
          <Image src={davidePhoto} alt="Davide Fella" width={400} height={400} />
        </div>
      </div>
    </section>
    
    <!-- Content Grid -->
    <div class="content-grid">
      <!-- Recent Posts -->
      <section class="posts-section">
        <h2 class="section-title">Ultimi Articoli</h2>
        <ul class="posts-list">
          {recentPosts.map(post => (
            <li class="post-item">
              <a href={`/blog/${post.slug}`} class="post-link">
                {post.data.title}
              </a>
              <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
            </li>
          ))}
        </ul>
        <a href="/blog" class="view-all">Tutti gli articoli â†’</a>
      </section>

      <!-- Sidebar -->
      <aside class="sidebar">
        <!-- Newsletter Box -->
        <div class="sidebar-box newsletter-box">
          <div class="box-header">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>Resta aggiornato</span>
          </div>
          <p class="box-description">Ricevi una notifica quando pubblico qualcosa di nuovo.</p>
          <form class="mini-newsletter-form" action="#" method="POST">
            <input type="email" name="email" placeholder="Email" required />
            <button type="submit">Iscriviti</button>
          </form>
        </div>

        <!-- Tags -->
        {allTags.length > 0 && (
          <div class="sidebar-box tags-box">
            <div class="box-header">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                <line x1="7" y1="7" x2="7.01" y2="7"></line>
              </svg>
              <span>Tag</span>
            </div>
            <div class="tags-list">
              {allTags.map(tag => (
                <a href={`/blog?tag=${tag}`} class="tag-link">#{tag}</a>
              ))}
            </div>
          </div>
        )}
      </aside>
    </div>

  </div>
</Layout>

<style>
  /* Hero */
  .hero {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-3xl);
    align-items: center;
    padding-bottom: var(--space-3xl);
    margin-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .hero-wave {
    font-size: 1.75rem;
    margin-bottom: var(--space-md);
  }
  
  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }
  
  .hero-subtitle {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
    max-width: 500px;
  }
  
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 500;
    padding: var(--space-md) var(--space-xl);
    border-radius: 8px;
    transition: all 0.2s ease;
  }
  
  .btn-primary:hover {
    background: var(--bg-card-hover);
    border-color: var(--blue-bright);
    color: var(--text-primary);
  }
  
  .btn-primary .arrow {
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .arrow {
    transform: translateX(4px);
  }

  /* Avatar */
  .hero-avatar {
    flex-shrink: 0;
  }
  
  .avatar-wrapper {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--blue-bright);
    box-shadow: 0 0 30px rgba(60, 128, 194, 0.2);
  }
  
  .avatar-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: var(--space-3xl);
    margin-bottom: var(--space-3xl);
  }

  /* Posts Section */
  .posts-section {
    max-width: 700px;
  }

  .section-title {
    font-size: 1.35rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
  }

  /* Posts List */
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }
  
  .post-item {
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .post-item:last-child {
    border-bottom: none;
  }
  
  .post-link {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    color: var(--blue-bright);
    margin-bottom: var(--space-xs);
    transition: color 0.2s ease;
  }
  
  .post-link:hover {
    color: var(--gold);
  }
  
  .post-item time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  /* View All Link */
  .view-all {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--blue-bright);
  }
  
  .view-all:hover {
    color: var(--gold);
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .sidebar-box {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: var(--space-lg);
  }

  .box-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
  }

  .box-header svg {
    color: var(--text-muted);
  }

  .box-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-md);
  }

  .mini-newsletter-form {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .mini-newsletter-form input {
    flex: 1;
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9rem;
    font-family: var(--font-sans);
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: 6px;
    color: var(--text-primary);
  }

  .mini-newsletter-form input:focus {
    outline: none;
    border-color: var(--blue-bright);
  }

  .mini-newsletter-form input::placeholder {
    color: var(--text-muted);
  }

  .mini-newsletter-form button {
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9rem;
    font-weight: 600;
    font-family: var(--font-sans);
    background: var(--text-primary);
    color: var(--bg-primary);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .mini-newsletter-form button:hover {
    opacity: 0.9;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag-link {
    font-size: 0.85rem;
    color: var(--text-secondary);
    background: var(--bg-primary);
    padding: 4px 10px;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .tag-link:hover {
    color: var(--blue-bright);
    background: rgba(60, 128, 194, 0.1);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-subtitle {
      max-width: none;
    }

    .hero-avatar {
      order: -1;
      justify-self: center;
    }

    .avatar-wrapper {
      width: 150px;
      height: 150px;
    }

    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      order: -1;
    }
  }
  
  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.75rem;
    }
    
    .hero-wave {
      font-size: 1.5rem;
    }
  }
</style>
