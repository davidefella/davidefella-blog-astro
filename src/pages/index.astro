---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import davidePhoto from '../assets/images/davide-fella.jpg';

// Prendi gli ultimi 5 post
const recentPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('it-IT', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};
---

<Layout title="Home">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <p class="hero-wave">ðŸ‘‹ Ciao, sono Davide</p>
        <h1 class="hero-title">Scrivo di software, didattica e progetti reali.</h1>
        <p class="hero-subtitle">
          Qui trovi appunti tecnici, esperimenti e riflessioni da sviluppatore e docente.
        </p>
        <a href="/blog" class="btn-primary">
          Leggi il blog <span class="arrow">â†’</span>
        </a>
      </div>
      
      <div class="hero-avatar">
        <div class="avatar-wrapper">
          <Image src={davidePhoto} alt="Davide Fella" width={400} height={400} />
        </div>
      </div>
    </section>
    
    <!-- Recent Posts -->
    <section class="posts-section">
      <h2 class="section-title">Ultimi Articoli</h2>
      <ul class="posts-list">
        {recentPosts.map(post => (
          <li class="post-item">
            <a href={`/blog/${post.slug}`} class="post-link">
              {post.data.title}
            </a>
            <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
          </li>
        ))}
      </ul>
      <a href="/blog" class="view-all">Tutti gli articoli â†’</a>
    </section>

  </div>
</Layout>

<style>
  /* Hero */
  .hero {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-3xl);
    align-items: center;
    padding-bottom: var(--space-3xl);
    margin-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .hero-wave {
    font-size: 1.75rem;
    margin-bottom: var(--space-md);
  }
  
  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }
  
  .hero-subtitle {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
    max-width: 500px;
  }
  
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 500;
    padding: var(--space-md) var(--space-xl);
    border-radius: 8px;
    transition: all 0.2s ease;
  }
  
  .btn-primary:hover {
    background: var(--bg-card-hover);
    border-color: var(--blue-bright);
    color: var(--text-primary);
  }
  
  .btn-primary .arrow {
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .arrow {
    transform: translateX(4px);
  }

  /* Avatar */
  .hero-avatar {
    flex-shrink: 0;
  }
  
  .avatar-wrapper {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--blue-bright);
    box-shadow: 0 0 30px rgba(60, 128, 194, 0.2);
  }
  
  .avatar-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Posts Section */
  .posts-section {
    max-width: 700px;
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: 1.35rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
  }

  /* Posts List */
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }
  
  .post-item {
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .post-item:last-child {
    border-bottom: none;
  }
  
  .post-link {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    color: var(--blue-bright);
    margin-bottom: var(--space-xs);
    transition: color 0.2s ease;
  }
  
  .post-link:hover {
    color: var(--gold);
  }
  
  .post-item time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  /* View All Link */
  .view-all {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--blue-bright);
  }
  
  .view-all:hover {
    color: var(--gold);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero-subtitle {
      max-width: none;
    }
    
    .hero-avatar {
      order: -1;
      justify-self: center;
    }
    
    .avatar-wrapper {
      width: 150px;
      height: 150px;
    }
    
  }
  
  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.75rem;
    }
    
    .hero-wave {
      font-size: 1.5rem;
    }
  }
</style>
