---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import davidePhoto from '../assets/images/davide-fella.jpg';

// Prendi gli ultimi 5 post
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

// Raccogli tutti i tag unici
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

const formatDate = (date: Date) => {
  return date.toLocaleDateString('it-IT', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};
---

<Layout title="Home">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <p class="hero-wave">ðŸ‘‹ Ciao, sono Davide</p>
        <h1 class="hero-title">Lavoro, parlo e scrivo di programmazione</h1>
        <p class="hero-subtitle">
          Condivido appunti, codice e idee sul mondo tech. Bug inclusi.
        </p>

        <div class="social-links">
          <a href="https://www.linkedin.com/in/felladavide" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="social-link">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://github.com/davidefella" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="social-link">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>

        <a href="/blog" class="btn-primary">
          Leggi il blog <span class="arrow">â†’</span>
        </a>
      </div>
      
      <div class="hero-avatar">
        <div class="avatar-wrapper">
          <Image src={davidePhoto} alt="Davide Fella" width={400} height={400} />
        </div>
      </div>
    </section>
    
    <!-- Content Grid -->
    <div class="content-grid">
      <!-- Recent Posts -->
      <section class="posts-section">
        <h2 class="section-title">Ultimi Articoli</h2>
        <ul class="posts-list">
          {recentPosts.map(post => (
            <li class="post-item">
              <a href={`/blog/${post.slug}`} class="post-link">
                {post.data.title}
              </a>
              <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
            </li>
          ))}
        </ul>
        <a href="/blog" class="view-all">Tutti gli articoli â†’</a>
      </section>

      <!-- Sidebar -->
      <aside class="sidebar">
        <!-- Newsletter Box -->
        <div class="sidebar-box newsletter-box">
          <div class="box-header">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>Resta aggiornato</span>
          </div>
          <p class="box-description">Ricevi una notifica quando pubblico qualcosa di nuovo.</p>
          <form class="mini-newsletter-form" action="#" method="POST">
            <input type="email" name="email" placeholder="Email" required />
            <button type="submit">Iscriviti</button>
          </form>
        </div>

        <!-- Tags -->
        {allTags.length > 0 && (
          <div class="sidebar-box tags-box">
            <div class="box-header">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                <line x1="7" y1="7" x2="7.01" y2="7"></line>
              </svg>
              <span>Tag</span>
            </div>
            <div class="tags-list">
              {allTags.map(tag => (
                <a href={`/blog?tag=${tag}`} class="tag-link">#{tag}</a>
              ))}
            </div>
          </div>
        )}
      </aside>
    </div>

  </div>
</Layout>

<style>
  /* Hero */
  .hero {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-3xl);
    align-items: center;
    padding-bottom: var(--space-3xl);
    margin-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .hero-wave {
    font-size: 1.75rem;
    margin-bottom: var(--space-md);
  }
  
  .hero-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-lg);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .social-link {
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: var(--text-primary);
  }
  
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 500;
    padding: var(--space-md) var(--space-xl);
    border-radius: 8px;
    transition: all 0.2s ease;
  }
  
  .btn-primary:hover {
    background: var(--bg-card-hover);
    border-color: var(--blue-bright);
    color: var(--text-primary);
  }
  
  .btn-primary .arrow {
    transition: transform 0.2s ease;
  }
  
  .btn-primary:hover .arrow {
    transform: translateX(4px);
  }

  /* Avatar */
  .hero-avatar {
    flex-shrink: 0;
  }
  
  .avatar-wrapper {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--blue-bright);
    box-shadow: 0 0 30px rgba(60, 128, 194, 0.2);
  }
  
  .avatar-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-3xl);
    margin-bottom: var(--space-3xl);
  }

  /* Posts Section */
  .posts-section {
    max-width: 700px;
  }

  .section-title {
    font-size: 1.35rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
  }

  /* Posts List */
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }
  
  .post-item {
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .post-item:last-child {
    border-bottom: none;
  }
  
  .post-link {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    color: var(--blue-bright);
    margin-bottom: var(--space-xs);
    transition: color 0.2s ease;
  }
  
  .post-link:hover {
    color: var(--gold);
  }
  
  .post-item time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  /* View All Link */
  .view-all {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--blue-bright);
  }
  
  .view-all:hover {
    color: var(--gold);
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .sidebar-box {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: var(--space-lg);
  }

  .box-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
  }

  .box-header svg {
    color: var(--text-muted);
  }

  .box-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-md);
  }

  .mini-newsletter-form {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .mini-newsletter-form input {
    flex: 1;
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9rem;
    font-family: var(--font-sans);
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: 6px;
    color: var(--text-primary);
  }

  .mini-newsletter-form input:focus {
    outline: none;
    border-color: var(--blue-bright);
  }

  .mini-newsletter-form input::placeholder {
    color: var(--text-muted);
  }

  .mini-newsletter-form button {
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9rem;
    font-weight: 600;
    font-family: var(--font-sans);
    background: var(--text-primary);
    color: var(--bg-primary);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .mini-newsletter-form button:hover {
    opacity: 0.9;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag-link {
    font-size: 0.85rem;
    color: var(--text-secondary);
    background: var(--bg-primary);
    padding: 4px 10px;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .tag-link:hover {
    color: var(--blue-bright);
    background: rgba(60, 128, 194, 0.1);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-subtitle {
      max-width: none;
    }

    .social-links {
      justify-content: center;
    }

    .hero-avatar {
      order: -1;
      justify-self: center;
    }

    .avatar-wrapper {
      width: 150px;
      height: 150px;
    }

    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      order: -1;
    }
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 1.75rem;
    }

    .hero-wave {
      font-size: 1.35rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .avatar-wrapper {
      width: 120px;
      height: 120px;
    }

    .mini-newsletter-form {
      flex-direction: column;
    }

    .mini-newsletter-form input,
    .mini-newsletter-form button {
      width: 100%;
    }
  }

  @media (max-width: 400px) {
    .hero-title {
      font-size: 1.5rem;
    }

    .hero-wave {
      font-size: 1.2rem;
    }

    .btn-primary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
